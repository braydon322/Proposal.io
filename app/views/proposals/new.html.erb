<fieldset>
  <%= form_for(@proposal) do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>
    <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
    <br>
  <%= f.label :budget %>
  <%= f.number_field :budget %>
    <br>
  <%= f.label :why_me %>
  <%= f.text_field :why_me %>
<br>
<fieldset>
  <legend>Fees</legend>
  <%= f.fields_for :fees do |fee_builder| %>
    <%= fee_builder.label :content %>
    <%= fee_builder.text_field :content %><br>
    <%= fee_builder.label :price_breakdown %>
    <%= fee_builder.number_field :price_breakdown %><br>
  <% end %>
</fieldset>
<br>
<fieldset>
  <legend>Milestones</legend>
  <%= f.fields_for :milestones do |milestone_builder| %>
    <%= milestone_builder.label :content %>
    <%= milestone_builder.text_field :content %><br>
    <%= milestone_builder.label :due_date %>
    <%= milestone_builder.text_field :due_date, prompt: { day: 'Select day', month: 'Select month', year: 'Select year'}, :order => [:day, :month, :year]%><br>
  <% end %>
</fieldset>
<br>
  <%= f.submit %>
<% end %>
</fieldset>

